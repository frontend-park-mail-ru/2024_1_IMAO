    {{/if}}
    <div class="statistics-container">
        <div class="statistics-item cursor-hand-hover">
            <div class="statistics-button">
                <div class="button-number">{{reviewCount}}</div>
                <div class="button-label">отзыв</div>
            </div>
        </div>
        <div class="statistics-item cursor-hand-hover">
            <div class="statistics-button">
                <div class="button-number">{{subscribersCount}}</div>
                <div class="button-label">подписчик</div>
            </div>
        </div>
        <div class="statistics-item cursor-hand-hover">
            <div class="statistics-button">
                <div class="button-number">{{subscribtionsCount}}</div>
                <div class="button-label">подписок</div>
            </div>
        </div>
    </div>

    <ul class="labels-group radio-group-vertical">
        <li class="labeled-icon text-underline-hover cursor-hand-hover">
            <div class="icon">
                <img src="images/list.svg">
            </div>
            <label class="Active">
                <input type="radio" name="radio" value="adverts" {{#if checked}}checked{{/if}} />
                <a class="icon-text" href="{{urlMerchant}}" data-url="{{urlMerchant}}">Мои объявления</a>
            </label>
        </li>
        <li class="labeled-icon text-underline-hover cursor-hand-hover">
            <div class="icon">
                <img src="images/cart.svg">
            </div>
            <label class="Active">
                <input type="radio" name="radio" value="orders" {{#if checked}}checked{{/if}} />
                <a class="icon-text" href="{{urlOrder}}" data-url="{{urlOrder}}">Мои заказы</a>
            </label>
        </li>
        <li class="labeled-icon text-underline-hover cursor-hand-hover ">
            <div class="icon">
                <img src="images/cog.svg">
            </div>
            <label class="Active">
                <input type="radio" name="radio" value="settings" {{#if checked}}checked{{/if}} />
                <a class="icon-text" href="{{urlSettings}}" data-url="{{urlSettings}}">Настройки</a>
            </label>
        </li>
    </ul>
</div>

</div>