<div>
    <div class="card-container">
        <div class="card-header">
            <div>{{merchantsName}}</div>
        </div>
        <div class="card-content">
            <div class="avatar-container">
                <img class="avatar-image" src="https://via.placeholder.com/72x76" />
                <div class="avatar-overlay"></div>
            </div>
            <div class="card-info">
                <div class="date">
                    <div>на Волчке с {{registrationDate}}</div>
                </div>
                <div class="rating">

                </div>
            </div>
        </div>
    </div>

